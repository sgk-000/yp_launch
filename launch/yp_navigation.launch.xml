<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <arg name="robot_model"/>
  <arg name="rviz" default="true" doc="launch rviz"/>
  <arg name="model" default="$(find-pkg-share yp_robot_config)/urdf/beego.urdf.xacro"/>

  <node name="robot_state_publisher" pkg="robot_state_publisher" exec="robot_state_publisher">
        <param name="robot_description" value="$(command 'xacro $(var model)')"/>
  </node>
  <include file="$(find-pkg-share ypspur_ros_bridge)/launch/ypspur_ros_bridge_speego.launch.xml">
    <arg name="robot_model" value="$(var robot_model)"/>
  </include>

  <include file="$(find-pkg-share teleop_twist_joy)/launch/teleop-launch.py"/>

  <include file="$(find-pkg-share urg_node)/launch/urg_node_launch.py"/>

  <include file="$(find-pkg-share yp_launch)/launch/static_broadcaster_base2laser_launch.py"/>

  <include file="$(find-pkg-share slam_toolbox)/launch/online_sync_launch.py">
    <arg name="use_sim_time" value="false"/>
  </include>

  <node pkg="rviz2" exec="rviz2" name="rviz2" output="screen" if="$(var rviz)" />
</launch>